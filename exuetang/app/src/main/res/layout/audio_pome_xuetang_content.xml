<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--诗词学堂-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/virtue_son"/>

            <TextView
                android:id="@+id/audio_pome_xuetang_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="诗词学堂"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pome_shijing_textview"
                    style="@style/two_audio_style_textview"
                    android:text="诗经"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/pome_tangshi_textview"
                    style="@style/two_audio_style_textview"
                    android:text="唐诗"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pome_chuci_textview"
                    style="@style/two_audio_style_textview"
                    android:text="楚辞"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/pome_songci_textview"
                    style="@style/two_audio_style_textview"
                    android:text="宋词"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pome_hanfu_textview"
                    style="@style/two_audio_style_textview"
                    android:text="汉赋"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/pome_yuanqu_textview"
                    style="@style/two_audio_style_textview"
                    android:text="元曲"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pome_mingqing_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="明清小说"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
             style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""/>

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>