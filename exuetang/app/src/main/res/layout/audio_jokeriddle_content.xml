<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--笑话谜语-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/joke_son1"/>

            <TextView
                android:id="@+id/audio_jokeriddle_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="笑话谜语1"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_animal_textview"
                    style="@style/two_audio_style_textview"
                    android:text="动物类谜语"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/jokeriddle_words_textview"
                    style="@style/two_audio_style_textview"
                    android:text="字词类谜语"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_plant_textview"
                    style="@style/two_audio_style_textview"
                    android:text="植物类谜语"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/jokeriddle_place_textview"
                    style="@style/two_audio_style_textview"
                    android:text="地名类谜语"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_goods_textview"
                    style="@style/two_audio_style_textview"
                    android:text="物品类谜语"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/jokeriddle_name_textview"
                    style="@style/two_audio_style_textview"
                    android:text="人名类谜语"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jokeriddle_brain_teaser_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="脑筋急转弯"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            android:id="@+id/jokeriddle_idiom_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="成语类谜语"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            android:id="@+id/jokeriddle_teaser_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="谜语急转弯"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/joke_son2"/>

            <TextView
                android:id="@+id/audio_joke_riddle_textview2"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="笑话谜语2"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_witty_textview"
                    style="@style/two_audio_style_textview"
                    android:text="机智与幽默"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/jokeriddle_story_textview"
                    style="@style/two_audio_style_textview"
                    android:text="幽默故事"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_child_textview"
                    style="@style/two_audio_style_textview"
                    android:text="儿童小笑话"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    style="@style/two_audio_style_textview"
                    android:text=""/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jokeriddle_afanty_textview"
                    style="@style/two_audio_style_textview"
                    android:text="阿凡提笑话"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    style="@style/two_audio_style_textview"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>