                android:text="成语故事"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/mingyanjingju_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/index_quotes"/>

            <TextView
                android:id="@+id/mingyanjingju_textview"
                style="@style/text_style"
                android:text="名言警句"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/mingrenmingyan_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/index_celebrity"/>

            <TextView
                android:id="@+id/mingrenmingyan_textview"
                style="@style/text_style"
                android:text="名人名言"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/worldmingzhu_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/world_son1"/>

            <TextView
                android:id="@+id/worldmingzhu_textview"
                style="@style/text_style"
                android:text="世界名著"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>
    <!--首页大分类第一行-->
    <LinearLayout
        style="@style/liner_style">

        <LinearLayout
            android:id="@+id/zicizhishi_linearlayout"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/index_words"/>

            <TextView
                android:id="@+id/zicizhishi_textview"
                style="@style/text_style"
                android:text="字词知识"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/mingrenzhuan_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/biography_son"/>

            <TextView
                android:id="@+id/mingrenzhuan_textview"
                style="@style/text_style"
                android:text="名人传"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/animalworld_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/index_biography"/>

            <TextView
                android:id="@+id/animalworld_textview"
                style="@style/text_style"
                android:text="动物世界"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:id="@+id/plantworld_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/index_flowers"/>

            <TextView
                android:id="@+id/plantworld_textview"
                style="@style/text_style"
                android:text="植物世界"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>

