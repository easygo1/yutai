<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/flowers_son1"/>

            <TextView
                android:id="@+id/audio_plant_world_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="植物世界1"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_angiosperm_textview"
                    style="@style/two_audio_style_textview"
                    android:text="被子植物"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/plant_world_gymnosperms_textview"
                    style="@style/two_audio_style_textview"
                    android:text="裸子植物"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_dicotyledon_textview"
                    style="@style/two_audio_style_textview"
                    android:text="双子叶植物"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/plant_world_fern_textview"
                    style="@style/two_audio_style_textview"
                    android:text="蕨类植物"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_monocotyledon_textview"
                    style="@style/two_audio_style_textview"
                    android:text="单子叶植物"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/plant_world_moss_textview"
                    style="@style/two_audio_style_textview"
                    android:text="苔藓"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/flowers_son2"/>

            <TextView
                android:id="@+id/audio_plant_world_textview2"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="植物世界2"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_algae_textview"
                    style="@style/two_audio_style_textview"
                    android:text="藻类"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/plant_world_bacteria_textview"
                    style="@style/two_audio_style_textview"
                    android:text="细菌"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_fungus_textview"
                    style="@style/two_audio_style_textview"
                    android:text="真菌"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/plant_world_blue_textview"
                    style="@style/two_audio_style_textview"
                    android:text="蓝藻植物"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_world_lichens_textview"
                    style="@style/two_audio_style_textview"
                    android:text="地衣"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    style="@style/two_audio_style_textview"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>

</LinearLayout>