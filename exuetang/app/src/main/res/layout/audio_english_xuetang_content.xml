<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--英语经典学堂-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/english"/>

            <TextView
                android:id="@+id/audio_english_xuetang_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="英文经典"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/english_xuetang_zhongxia_textview"
                    style="@style/two_audio_style_textview"
                    android:text="仲夏夜之梦"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/english_xuetang_nothing_textview"
                    style="@style/two_audio_style_textview"
                    android:text="无事生非"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/english_xuetang_luomiou_textview"
                    style="@style/two_audio_style_textview"
                    android:maxLines="1"
                    android:text="罗密欧与朱丽叶"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/english_xuetang_xinbailin_textview"
                    style="@style/two_audio_style_textview"
                    android:text="辛白林"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/english_xuetang_aosailuo_textview"
                    style="@style/two_audio_style_textview"
                    android:text="奥赛罗"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/english_xuetang_bofengyu_textview"
                    style="@style/two_audio_style_textview"
                    android:text="暴风雨"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/english_xuetang_maike_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="麦克佩斯"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            android:id="@+id/english_xuetang_xunhan_textview"
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text="驯悍记"
            />

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""/>

        <TextView
            style="@style/text_liner_y"/>

        <TextView
            style="@style/two_audio_style_uodown"
            android:gravity="center"
            android:text=""/>
    </LinearLayout>
    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>