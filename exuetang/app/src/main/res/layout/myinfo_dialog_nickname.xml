<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/my_info_dialog_title"
        android:textColor="@color/me_text_black"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:text="修改昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<EditText
    android:id="@+id/my_info_dialog_editview"
    android:background="@drawable/edit_frame_color"
    android:layout_gravity="center"
    android:layout_marginBottom="14dp"
    android:layout_marginTop="22dp"
    android:layout_width="220dp"
    android:layout_height="26dp"/>
    <TextView
       style="@style/text_liner_x"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/my_info_dialog_sex_cancle"
            android:textColor="@color/my_info_blue"
            android:textSize="@dimen/tab_textsize"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            style="@style/text_liner_y"/>
        <TextView
            android:id="@+id/my_info_dialog_sex_ok"
            android:textColor="@color/my_info_blue"
            android:textSize="@dimen/tab_textsize"
            android:gravity="center"
            android:text="确定"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>