<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/titlecolor"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/audio_home_back_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/return_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/audio_home_back_image"
        android:gravity="center"
        android:text="e学堂"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="音频宝"
        android:textSize="@dimen/title_textsize"/>

    <ImageView
        android:id="@+id/audio_home_like_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/audio_home_resent_image"
        android:src="@mipmap/index_like"/>

    <ImageView
        android:id="@+id/audio_home_resent_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/index_recent"/>
</RelativeLayout>