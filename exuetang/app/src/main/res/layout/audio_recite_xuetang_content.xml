<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--朗诵学堂-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/reading"/>

            <TextView
                android:id="@+id/audio_recite_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="朗诵学堂"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recite_ancient_textview"
                    style="@style/two_audio_style_textview"
                    android:text="古代名篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/recite_foreign_textview"
                    style="@style/two_audio_style_textview"
                    android:text="外国名篇"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recite_recent_textview"
                    style="@style/two_audio_style_textview"
                    android:text="近代名篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/recite_prose_textview"
                    style="@style/two_audio_style_textview"
                    android:text="历代美文"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recite_modern_textview"
                    style="@style/two_audio_style_textview"
                    android:text="现代名篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/recite_novel_textview"
                    style="@style/two_audio_style_textview"
                    android:text="儿童小说"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>