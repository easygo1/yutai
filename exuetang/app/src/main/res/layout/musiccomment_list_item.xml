<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/musiccomment_photo_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/portrait_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/musiccomment_nickname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="昵称在这"
                android:textColor="@color/me_text_gray"
                android:textSize="@dimen/my_info_right_textsize"/>

            <TextView
                android:textColor="@color/me_middle_text"
                android:id="@+id/musiccomment_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:text="09:36"
                android:textSize="@dimen/audio_item_textview"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/musiccomment_content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:lineSpacingExtra="8dp"
        android:layout_marginBottom="5dp"
        android:text="@string/comment_strs"
        android:textColor="@color/index_textcolor"
        android:textSize="@dimen/my_info_right_textsize"/>
<TextView
    style="@style/text_liner_x"/>
</LinearLayout>