<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--好词好句-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:src="@drawable/mp3_son_banner"/>

    <TextView
        style="@style/text_liner_x"
        android:layout_height="15dp"
        android:background="@color/background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/image_onestyle"
                android:src="@mipmap/sentence_son"/>

            <TextView
                android:id="@+id/audio_goodwords_textview1"
                style="@style/text_style"
                android:paddingTop="5dp"
                android:text="好吃好句"/>
        </LinearLayout>

        <TextView
            style="@style/text_liner_y"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goodwords_person_textview"
                    style="@style/two_audio_style_textview"
                    android:text="人物篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/goodwords_things_textview"
                    style="@style/two_audio_style_textview"
                    android:text="状物篇"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goodwords_matter_textview"
                    style="@style/two_audio_style_textview"
                    android:text="记事篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/goodwords_imagine_textview"
                    style="@style/two_audio_style_textview"
                    android:text="想象篇"/>
            </LinearLayout>

            <TextView
                style="@style/text_liner_y"/>

            <LinearLayout
                style="@style/two_audio_style_uodown"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goodwords_scenery_textview"
                    style="@style/two_audio_style_textview"
                    android:text="写景篇"/>

                <TextView
                    style="@style/text_liner_x"/>

                <TextView
                    android:id="@+id/goodwords_other_textview"
                    style="@style/two_audio_style_textview"
                    android:text="其他篇"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_liner_x"/>
</LinearLayout>