<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--底部导航按钮-->
    <style name="radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/textcolor</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--首页中间的imageview-->
    <style name="index_middle">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">108dp</item>
    </style>

    <style name="index_middle_image">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
    </style>

    <style name="index_middle_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/index_textcolor</item>
    </style>
    <!--我的界面的中间布局-->
    <style name="me_middle_layout0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/me_layout</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="me_middle_layout1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="me_middle_image">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginLeft">14dp</item>
    </style>

    <style name="me_middle_layout2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="me_middle_text_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/me_text_black</item>
    </style>

    <style name="me_middle_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/me_middle_text</item>
    </style>
    <!--音频宝（首页）大分类中的textview-->
    <style name="text_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/me_text_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--音频宝（首页）大分类中的imageview-->
    <style name="image_onestyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <!--音频宝一级分类linerlayout-->
    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <!--横线的样式-->
    <style name="text_liner_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--竖线的样式-->
    <style name="text_liner_y">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--二级分类页面中的两个小分类上下排列-->
    <style name="two_audio_style_uodown">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/me_text_black</item>
    </style>
    <!--二级分类中具体分类的textview样式-->
    <style name="two_audio_style_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/me_text_black</item>
    </style>
    <!--水平按权重的textView设置-->
    <style name="horizontal_center_style_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/me_text_black</item>
    </style>
    <!--音乐播放页面底部暂停上一首下一首图片样式-->
    <style name="audio_play_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--我的信息里面左边的textview-->
<style name="my_info_text_left">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginLeft">14dp</item>
    <item name="android:textColor">@color/me_text_black</item>
    <item name="android:textSize">@dimen/my_info_left_textsize</item>
</style>
<!--我的信息里面右面的textView-->
    <style name="my_info_text_right">
        <item name="android:layout_marginLeft">110dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/my_info_right_text</item>
        <item name="android:textSize">@dimen/my_info_right_textsize</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">41dp</item>
    </style>
    <!--我的信息里面右面的image-->
    <style name="my_info_image_arrow">
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@mipmap/right_arrow</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--spinner菜单-->
    <style name="city_spinner_dialog" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:dropDownWidth">280dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
