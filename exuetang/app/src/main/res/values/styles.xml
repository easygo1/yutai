<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--音频宝（首页）大分类中的textview-->
    <style name="text_style">
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--音频宝（首页）大分类中的imageview-->
    <style name="image_onestyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--音频宝一级分类linerlayout-->
    <style name="liner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <!--横线的样式-->
    <style name="text_liner_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--竖线的样式-->
    <style name="text_liner_y">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--二级分类页面中的两个小分类上下排列-->
    <style name="two_audio_style_uodown">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--二级分类中具体分类的textview样式-->
    <style name="two_audio_style_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--水平按权重的textView设置-->
    <style name="horizontal_center_style_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--音乐播放页面底部暂停上一首下一首图片样式-->
    <style name="audio_play_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
